<div class="container">
  <div class="col-md-6">
    <h2>Category List</h2>
  </div>

  <div class="card">
    <div class="card-body">
      <% if categories.any? %>
        <ul class="list-group">
          <% categories.each do |category| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div class="category-info">
                <strong><%= category.name %></strong>
                <p><%= category.description %></p>
              </div>

              <div class="category-actions">
                <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-sm btn-outline-secondary' %>
                <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted">No records available.</p>
      <% end %>
    </div>
  </div>
</div>
