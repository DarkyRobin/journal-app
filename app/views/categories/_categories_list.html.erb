<div class="container">
  <div class="list-group-items d-flex justify-content-between align-items-center">
    <div>
      <h2>Category List</h2>
    </div>
    <div>
      <%= link_to 'Add New', new_category_path, class: 'btn btn-sm btn-outline-primary' %>
      <%= link_to 'Back', dashboard_path, class: 'btn btn-sm btn-outline-secondary' %>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <% if categories.any? %>
        <ul class="list-group" role="list">
          <% categories.each do |category| %>
            <li id="category_<%= category.id %>" class="list-group-item d-flex justify-content-between align-items-center" role="listitem">
              <div class="category-info">
                <strong><%= category.name %></strong>
                <p><%= category.description %></p>
              </div>

              <div class="category-actions">
                <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-sm btn-outline-secondary mr-2' %>
                <%= button_to 'Delete', category_path(category), method: :delete, data: { confirm: 'Are you sure you want to delete this category?' }, class: 'btn btn-sm btn-outline-danger', form_class: 'd-inline' %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted">No records available.</p>
      <% end %>
    </div>
  </div>
</div>
