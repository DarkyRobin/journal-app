<div class="task-details">
  <% if @task %>
    <h3><%= task.title %></h3>

    <div class="task-info">
      <p><strong>Description:</strong> <%= task.description %></p>
      <p><strong>Due Date:</strong> <%= task.due_date.strftime('%Y-%m-%d') if task.due_date %></p>
      <p><strong>Category:</strong> <%= task.category.name if task.category %></p>
      <!-- Add more details as needed -->
    </div>

    <div class="task-actions">
      <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-sm btn-outline-secondary' %>
      <%= button_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }, class: 'btn btn-sm btn-outline-danger', form_class: 'd-inline' %>
    </div>
  <% else %>
    <p>No task details available.</p>
  <% end %>
</div>

